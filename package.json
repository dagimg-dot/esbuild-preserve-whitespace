{
  "name": "esbuild-preserve-whitespace",
  "version": "1.0.0",
  "description": "Esbuild plugin for TypeScript transpilation with whitespace preservation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check:types": "tsc --noEmit",
    "lint": "biome lint --write .",
    "lint:unsafe": "biome lint --write --unsafe .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "publish": "bun publish --access public",
    "release": "release-it"
  },
  "keywords": [
    "esbuild",
    "plugin",
    "typescript",
    "whitespace",
    "preserve"
  ],
  "author": "Dagim G. Astatkie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dagimg-dot/esbuild-preserve-whitespace.git"
  },
  "homepage": "https://github.com/dagimg-dot/esbuild-preserve-whitespace#readme",
  "bugs": {
    "url": "https://github.com/dagimg-dot/esbuild-preserve-whitespace/issues"
  },
  "dependencies": {
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "release-it": "^19.0.6",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "esbuild": "^0.19.0"
  }
}
